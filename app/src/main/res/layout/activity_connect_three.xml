<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/mainbackground"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.webs.saboorparsaean.xo.connectThreeActivity">

    <GridLayout
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_centerInParent="true"
        tools:targetApi="ice_cream_sandwich"
        android:columnCount="3"
        android:id="@+id/pg_layout"
        android:rowCount="3"
        android:background="@drawable/background">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:tag="0"
            android:onClick="dropIn"
            android:layout_marginTop="40dp"
            android:layout_column="0"
            android:layout_row="0"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:tag="1"
            android:onClick="dropIn"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="40dp"
            android:layout_column="1"
            android:layout_row="0"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:tag="2"
            android:onClick="dropIn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_column="2"
            android:layout_row="0"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:tag="3"
            android:onClick="dropIn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_column="0"
            android:layout_row="1"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:tag="4"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="20dp"
            android:onClick="dropIn"
            android:layout_column="1"
            android:layout_row="1"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:tag="5"
            android:onClick="dropIn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_column="2"
            android:layout_row="1"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:tag="6"
            android:onClick="dropIn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_column="0"
            android:layout_row="2"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:tag="7"
            android:onClick="dropIn"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="20dp"
            android:layout_column="1"
            android:layout_row="2"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:tag="8"
            android:onClick="dropIn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_column="2"
            android:layout_row="2"/>

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/imgLinearlayout"

        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:tag="0"
            android:layout_gravity="center_horizontal"
            android:id="@+id/fireworks"
            android:layout_marginTop="0dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:tag="1"
            android:id="@+id/winner_sign"
            android:layout_height="wrap_content">

        <ImageView
            android:layout_width="120dp"
            android:layout_weight="0.5"
            android:tag="11"
            android:id="@+id/imgWinOne"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="100dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:id="@+id/btn_play_again"
            android:onClick="reset"
            android:src="@drawable/button"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="120dp"
            android:layout_weight="0.5"
            android:tag="33"
            android:id="@+id/imgWinTwo"
            android:layout_height="wrap_content" />


        </LinearLayout>





    </LinearLayout>

</RelativeLayout>
